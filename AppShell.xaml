<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="D424.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:D424.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkoutTrackerApp"
    Shell.TabBarBackgroundColor="#212121" 
    Shell.TabBarTitleColor="White"        
    Shell.TabBarUnselectedColor="#757575">

    <TabBar x:Name="MainTabBar">
        <Tab Title="Profile">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate pages:ProfilePage}"
                Route="ProfilePage"
                Shell.BackgroundColor="#1E1E1E" /> 
        </Tab>
        <Tab Title="Exercises">
            <ShellContent
                Title="Exercises"
                ContentTemplate="{DataTemplate pages:ExercisesPage}"
                Route="Exercises"
                Shell.BackgroundColor="#1E1E1E" />
        </Tab>
        <Tab Title="Workout">
            <ShellContent
                Title="Routines"
                ContentTemplate="{DataTemplate pages:HomePage}"
                Route="HomePage"
                Shell.BackgroundColor="#1E1E1E" />
        </Tab>
        <Tab Title="Report">
            <ShellContent
                Title="Report"
                ContentTemplate="{DataTemplate pages:ReportPage}"
                Route="ReportPage"
                Shell.BackgroundColor="#1E1E1E" />
        </Tab>
        <Tab Title="Timer">
            <ShellContent
                Title="Interval Timer"
                ContentTemplate="{DataTemplate pages:TimerPage}"
                Route="TimerPage"
                Shell.BackgroundColor="#1E1E1E" />
        </Tab>
    </TabBar>
</Shell>